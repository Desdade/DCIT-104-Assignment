public class Numbers {
    public static void main(String[] args) {
        int count = 0;
        double avg = 0;
        int sum = 0;
        for (int i = 1; i < 10000; i++)
            if ((i % 2) == 0) {
                sum = sum + i;
                count++;
                avg = sum / count;
            }
        System.out.println("The average of all even numbers between 1 and 10000 is " + avg);
    }

}
